{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "classes": false,
      "modules": true,
      "legacyDecorators": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "mocha": true
  },
  "plugins": ["import"],
  "extends": ["eslint:recommended", "prettier", "plugin:import/errors", "plugin:import/warnings"],
  "globals": {},
  "rules": {
    "eol-last": 0,
    "new-cap": 0,
    "no-console": 0,
    "no-debugger": 1,
    "no-underscore-dangle": 0,
    "no-unused-vars": "off",
    "no-use-before-define": 0,
    "prefer-template": 1,
    "space-before-blocks": 1,
    "strict": 0,
    "no-useless-escape": 0,
    "getter-return": 0,
    "curly": "error",
    "import/no-unresolved": "error"
  },
  "settings": {
    "import/extensions": [".js"],
    "import/resolver": "webpack"
  }
}
